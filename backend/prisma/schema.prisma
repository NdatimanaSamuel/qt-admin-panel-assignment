generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"  <-- REMOVE THIS
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum UserRole {
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  role       UserRole   @default(USER)
  status     UserStatus @default(ACTIVE)
  createdAt  DateTime   @default(now())
  signature  String?
}